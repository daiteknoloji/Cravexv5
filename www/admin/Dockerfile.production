# Production Dockerfile for Synapse Admin
FROM node:20-alpine AS build

WORKDIR /app

# Copy package files
COPY package*.json ./
RUN npm ci

# Copy source
COPY . .

# Build
RUN npm run build

# Production stage
FROM node:20-alpine AS runner

WORKDIR /app

# Copy built files
COPY --from=build /app/dist ./dist

# Install vite globally for preview
RUN npm install -g vite

# Expose port
EXPOSE 3000

# Start with vite preview
CMD ["sh", "-c", "vite preview --host 0.0.0.0 --port ${PORT:-3000}"]
